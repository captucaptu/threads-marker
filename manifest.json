{
  "manifest_version": 3,
  "name": "Threads Marker",
  "version": "1.0",
  "description": "在 Threads 替特定帳號添加標記",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.threads.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.threads.com/*"],
      "js": ["content.js"],
      "css": ["style.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "管理帳號名單"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}